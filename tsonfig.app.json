{
    "compilerOptions": {
      "composite": true,
      "jsx": "react-jsx",
      "module": "ESNext",
      "target": "ES2020",
      "moduleResolution": "Node",
      "strict": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }
  